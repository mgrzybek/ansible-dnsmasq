{% set queries = [] %}
{% for query in dnsmasq_monitoring_queries %}
{%     set _ = queries.extend('{ "args": [ "host", "{{ query }}", "localhost" ], "interval": "60s" }') %}
{% endfor %}
{
    "service": {
        "checks": [
{{ queries | map('quote') | join(',\n') }}
        ],
        "enable_tag_override": false,
        "name": "dns-queries",
        "tags": [
            "dns"
        ]
    }
}
